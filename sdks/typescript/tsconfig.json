{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": false
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
